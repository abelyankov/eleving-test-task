<% breadcrumb :playoff, @tournament %>

<h1>Playoff</h1>

<%= button_to 'Start playoff', generate_tournament_playoff_index_path(@tournament) %>

<ul>
  <% @playoff_participants.each do |participant| %>
    <li>
      <%= participant.team.name %> <%= participant.points%> <%= participant.division %>
    </li>
  <% end %>
</ul>

<table>
  <tr>
    <th>Home</th>
    <th>Guest</th>
    <th>Result</th>
  </tr>
  <% @games.decorate.each do |game| %>
    <tr>
      <td>
        <%= game.home_team %>
      </td>
      <td>
        <%= game.away_team %>
      </td>
      <td><%= game.home_score %>/<%= game.away_score %></td>
      <td><%= button_to 'Remove game', tournament_playoff_path(@tournament, game), method: :delete %></td>
    </tr>
  <% end %>
</table>